<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:popupAnimationStyle">@anim/enter_from_right</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/header_color</item>
        <item name="colorPrimaryDark">@color/header_color_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Button" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/gray</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="HighlightedButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/highlighted_button</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="SettingsInnerPadding">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorControlActivated">@color/accent</item>
    </style>

</resources>
